<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="console" packages="">
	<Appenders>
		<RollingFile name="RollingFile" fileName="c:/logs/rolling.log"
			filePattern="c:/logs/$${date:yyyy-MM}/rolling-%d{yyyy-MM-dd-HH}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="6"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="0.01 MB" />
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="error">
			<AppenderRef ref="RollingFile" />
		</Root>
	</Loggers>
</Configuration>